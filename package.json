{
    "name": "afron-workspace",
    "version": "1.0.0",
    "repository": "https://github.com/hve4638/ai-front.git",
    "author": "Hve <hve4638@gmail.com>",
    "license": "GPL-3.0-only",
    "scripts": {
        "start": "pnpm app:start",
        "app:start": "concurrently \"pnpm electron:start\" \"pnpm front:start\"",
        "front:start": "pnpm --filter @afron/frontend start",
        "electron:start": "wait-on http://localhost:3600 && pnpm --filter @afron/electron start",
        "build": "pnpm chatai:build && pnpm core:build && pnpm electron:build && pnpm front:build",
        "chatai:build": "pnpm --filter @afron/chatai-models build",
        "core:build": "pnpm --filter @afron/core build",
        "electron:build": "pnpm --filter @afron/electron build",
        "front:build": "pnpm --filter @afron/frontend build",
        "dist": "pnpm build && pnpm electron:load_static && pnpm electron:dist",
        "electron:load_static": "cd packages/electron && powershell -ExecutionPolicy Bypass -File ./import-static.ps1",
        "electron:dist": "pnpm --filter @afron/electron dist:win",
        "clean": "pnpm clean:modules",
        "clean:modules": "powershell -ExecutionPolicy Bypass -File ./scripts/remove-install.ps1",
        "clean:dist": "powershell -ExecutionPolicy Bypass -File ./scripts/remove-dist.ps1",
        "reinstall": "pnpm clean:modules && pnpm install",
        "postinstall": "node node_modules/electron/install.js && pnpm --filter @afron/electron electron-rebuild"
    },
    "devDependencies": {
        "concurrently": "^9.0.1",
        "cross-env": "^7.0.3",
        "wait-on": "^8.0.1"
    },
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "pnpm": {
        "overrides": {
            "node-abi": "4.26.0"
        },
        "ignoredBuiltDependencies": [
            "@parcel/watcher",
            "@tailwindcss/oxide",
            "better-sqlite3",
            "electron-winstaller",
            "esbuild",
            "sharp"
        ]
    }
}