{
  "name": "@afron/electron",
  "private": true,
  "version": "0.9.1",
  "description": "ChatAI Frontend",
  "repository": "https://github.com/hve4638/ai-front.git",
  "author": "Hve",
  "license": "GPL-3.0-only",
  "main": "dist/main.js",
  "scripts": {
    "start": "yarn build && electron-forge start",
    
    "start:fast": "electron-forge start",
    "start:dev": "yarn build && cross-env ELECTRON_DEV=TRUE electron .",
    "start:dev:mem": "yarn build && cross-env ELECTRON_DEV=TRUE ELECTRON_IN_MEMORY=TRUE electron .",
    "start:release": "yarn build && cross-env ELECTRON_DEV=FALSE electron .",
    "build": "rollup -c",
    "dist": "yarn dist:win",
    "dist:win": "electron-builder -c.extraMetadata.main=./dist/main.js",
    "playground": "tsx ./src/playground",
    "test": "jest",
    "compile": "tsc",
    "package": "electron-forge package",
    "make": "electron-forge make",
    
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
    "@electron-forge/plugin-fuses": "^7.5.0",
    "@electron/fuses": "^1.8.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "better-sqlite3": "^12.2.0",
    "cross-env": "^7.0.3",
    "electron": "37.2.3",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0",
    "rollup": "^4.28.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@afron/chatai-models": "1.0.0",
    "@afron/core": "1.0.0",
    "@afron/types": "1.0.0",
    "@hve/channel": "^1.0.1",
    "@hve/chatai": "^0.12.0",
    "@hve/mime": "^1.0.0",
    "@hve/prompt-template": "^0.2.0",
    "ac-storage": "^0.12.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "electron-localshortcut": "^3.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "js-tiktoken": "^1.0.20",
    "ps-list": "^8.1.1",
    "sharp": "^0.34.2",
    "systeminformation": "^5.23.23",
    "tiktoken": "^1.0.21",
    "uuid": "^11.0.3",
    "win-known-folders": "^1.0.0"
  },
  "build": {
    "productName": "Afron",
    "appId": "com.hve.afron",
    "extends": null,
    "icon": "./static/favicon.ico",
    "files": [
      ".env",
      "dist/**/*",
      "static/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "static/assets",
      "output": "release"
    }
  }
}
