{
  "name": "@afron/electron",
  "private": true,
  "version": "0.11.1",
  "description": "ChatAI Frontend",
  "repository": "https://github.com/hve4638/ai-front.git",
  "author": "Hve",
  "license": "GPL-3.0-only",
  "main": "dist/main.js",
  "scripts": {
    "start": "pnpm build && electron-forge start",
    "start:fast": "electron-forge start",
    "start:dev": "pnpm build && cross-env ELECTRON_DEV=TRUE electron .",
    "start:dev:mem": "pnpm build && cross-env ELECTRON_DEV=TRUE ELECTRON_IN_MEMORY=TRUE electron .",
    "start:release": "pnpm build && cross-env ELECTRON_DEV=FALSE electron .",
    "build": "rollup -c",
    "dist": "pnpm dist:win",
    "dist:win": "electron-builder -c.extraMetadata.main=./dist/main.js",
    "dist:mac": "electron-builder -c.extraMetadata.main=./dist/main.js --mac",
    "make:mac": "electron-forge make --platform=darwin",
    "playground": "tsx ./src/playground",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "compile": "tsc",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "electron-rebuild": "electron-rebuild --force --module-dir ../.. --only better-sqlite3 --version 40.1.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-dmg": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
    "@electron-forge/plugin-fuses": "^7.5.0",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^4.0.3",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.9",
    "better-sqlite3": "^12.2.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^26.0.12",
    "rollup": "^4.28.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@afron/chatai-models": "workspace:*",
    "@afron/core": "workspace:*",
    "@afron/types": "workspace:*",
    "@hve/channel": "^1.0.1",
    "@hve/chatai": "^0.12.0",
    "@hve/mime": "^1.0.0",
    "ac-storage": "^0.15.1",
    "balanced-match": "^1.0.2",
    "brace-expansion": "^2.0.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "electron-localshortcut": "^3.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "js-tiktoken": "^1.0.20",
    "minimatch": "^9.0.5",
    "ps-list": "^8.1.1",
    "sanitize-filename": "^1.6.3",
    "sharp": "^0.34.2",
    "systeminformation": "^5.23.23",
    "tiktoken": "^1.0.21",
    "tslib": "^2.6.0",
    "uuid": "^11.0.3",
    "win-known-folders": "^1.0.0",
    "write-file-atomic": "^7.0.0"
  },
  "build": {
    "productName": "Afron",
    "appId": "com.hve.afron",
    "extends": null,
    "icon": "./static/favicon.ico",
    "files": [
      ".env",
      "dist/**/*",
      "static/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "static/assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "./static/favicon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./build/entitlements.mac.plist",
      "entitlementsInherit": "./build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "backgroundColor": "#ffffff",
      "window": {
        "width": 600,
        "height": 420
      },
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
